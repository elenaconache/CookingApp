<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        tools:text="@string/title_pick_color"
        android:id="@+id/text_title_picker"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:tag="0"
            android:id="@+id/img_color1"
            android:background="@drawable/rounded_rec_color"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <ImageView
            android:tag="1"
            android:id="@+id/img_color2"
            android:background="@drawable/rounded_rec_color"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <ImageView
            android:tag="2"
            android:id="@+id/img_color3"
            android:background="@drawable/rounded_rec_color"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <ImageView
            android:tag="3"
            android:id="@+id/img_color4"
            android:background="@drawable/rounded_rec_color"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <ImageView
            android:tag="4"
            android:id="@+id/img_color5"
            android:background="@drawable/rounded_rec_color"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:tag="5"
            android:id="@+id/img_color6"
            android:background="@drawable/rounded_rec_color"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <ImageView
            android:tag="6"
            android:id="@+id/img_color7"
            android:background="@drawable/rounded_rec_color"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <ImageView
            android:tag="7"
            android:id="@+id/img_color8"
            android:background="@drawable/rounded_rec_color"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <ImageView
            android:tag="8"
            android:id="@+id/img_color9"
            android:background="@drawable/rounded_rec_color"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <ImageView
            android:tag="9"
            android:id="@+id/img_color10"
            android:background="@drawable/rounded_rec_color"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:weightSum="5"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/rounded_rec_color"
            android:id="@+id/img_chosen_color"

            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"

        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/button_cancel"
            android:textSize="18sp"
            android:text="@string/title_cancel"
            android:layout_gravity="end"
            android:gravity="end|center_vertical"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:id="@+id/button_ok"
            android:textSize="18sp"
            android:text="@string/title_done"
            android:layout_gravity="end"
            android:gravity="end|center_vertical"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>