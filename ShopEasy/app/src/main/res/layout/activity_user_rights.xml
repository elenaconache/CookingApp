<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/container_user_rights"
    tools:context="com.example.elena.shopeasy.ui.UserRightsActivity">

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/text_user_rights"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:text="@string/title_user_rights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:scrollbars="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:maxLines="100"
            android:id="@+id/text_user_rights_content"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="300dp" />


    <TextView
        android:gravity="center"
        android:linksClickable="true"
        android:autoLink="web"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_user_rights"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        tools:text="@string/text_download_pdf"
        android:id="@+id/text_download_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
